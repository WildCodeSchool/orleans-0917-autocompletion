{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}
{% block body %}
    <h1>Contact creation</h1>

    {{ form_start(form) }}
    {{ form_errors(form) }}

    {{ form_row(form.firstname) }}
    {{ form_row(form.lastname) }}
    {{ form_row(form.address) }}
    {{ form_row(form.postalCode) }}
    <fieldset class="town">
        {{ form_row(form.town) }}

        <ul class="list-group autocomplete" id="autocomplete"></ul>
    </fieldset>
    <input class="btn btn-lg btn-primary" type="submit" value="Create"/>
    {{ form_end(form) }}

    <hr/>
    <a class="btn btn-default" href="{{ path('contact_index') }}">Back to the list</a>

{% endblock %}

{% block javascripts %}

    <script src="{{ asset('js/ajax.js') }}"></script>
{% endblock %}
